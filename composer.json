{
    "name": "packistry/packistry",
    "type": "project",
    "description": "Packistry is a Composer repository for PHP packages.",
    "keywords": ["composer", "registry", "packages", "repository"],
    "license": "GPL-3.0",
    "require": {
        "php": "^8.2",
        "ext-zip": "*",
        "laravel/framework": "^11.9",
        "laravel/octane": "^2.5",
        "laravel/prompts": "^0.1.25",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.9",
        "spatie/laravel-data": "^4.9",
        "spatie/laravel-query-builder": "^6.2",
        "spiral/roadrunner-cli": "^2.6.0",
        "spiral/roadrunner-http": "^3.3.0"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^3.1",
        "driftingly/rector-laravel": "^1.2",
        "ergebnis/phpstan-rules": "^2.2",
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^2.9",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.26",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.0",
        "pestphp/pest": "^3.1",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpstan/phpstan-deprecation-rules": "^1.2",
        "phpstan/phpstan-strict-rules": "^1.6",
        "rector/rector": "^1.2",
        "spatie/laravel-ray": "^1.37",
        "tomasvotruba/type-coverage": "^0.3.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": [
            "pint & rector & phpstan analyse --memory-limit=2G"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
